extends layout

block content
  h1= title
  p Welcome to #{title}
  - let items = results
    p Click here to add new item to the collection
    button(class="btn btn-success m-2" onclick="dispatch('/mobiles/create')") Create
  div(class="container-fluid")
    div(class="row m-1")
      each mobiles, index in items
        - let destination = `dispatch(\"/mobiles/update?id=${mobiles._id}\")` 
        div(class="row-sm-2" onclick=`buy(${index+1})`) #{mobiles.mobile_brand} - #{mobiles.mobile_color} - $#{mobiles.mobile_cost}
          button.btn( class="btn-primary ml-1", onclick= destination) Update 
          button.btn( class="btn-info ml-1", onclick= destination1) Detail
          button.btn( class="btn-danger ml-1", onclick= destination2) Delete
  
  script.
    function buy(index){
      alert(`You purchased item ${index}`);
    }
    
    function dispatch(path){ 
      window.location.href=path 
    } 